<%= render "shared/menu_settings" %>

<div id="submit_current_password_form">
  <h1 class="tilte-header"><%= t('header.password') %></h1>
	<%= simple_form_for :identity, :url => confirm_password_path, html: {class: "form-default"}, :method => :post do |f| %>
    <div class="form-group row">
      <div class="col-xs-12">
        <%= f.input :password, :label => false, :placeholder => '', hint: false %>
        <span class="hint"><%= t('header.password_note') %></span>
      </div>
    </div>

		<div class="form-group row button">
			<%= f.submit t('header.next'), :class => "btn button-primary"%>
		</div>

  <% end %>
</div>
