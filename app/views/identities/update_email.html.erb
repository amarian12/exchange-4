<%= render "shared/menu_settings" %>

<div id="change_email_form">
  <h1 class="tilte-header"><%= t('header.email') %></h1>
	<h3 class="text-center note-2"><%= t('header.email_note') %></h3>
	<%= form_tag @identity, :url => update_email_path, :method => :post do %>
    <div class="form-group row">
      <div class="col-xs-12">
        <%= text_field_tag :email, "", class: 'form-control change-email-input', require: true %>
      </div>
    </div>

  	<div class="form-group text-center">
      <%= submit_tag t('header.update'), :class => 'button-primary' %>
    </div>
  <% end %>
</div>
