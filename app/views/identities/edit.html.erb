<%= render "shared/menu_settings" %>

<div id="change_passwod_form">
  <h1 class="tilte-header"><%= t('.reset_password') %></h1>
  <%= form_for @identity, html: {class: "form-default"} do |f| %>
    <div class="form-group">
      <%= f.label :old_password, t('.old_password'), class: "col-sm-4 col-xs-12 col-form-label" %>
      <div class="col-sm-7 col-xs-12">
        <%= f.text_field :old_password, type: :password, :label => false, :class => 'form-control', :placeholder => t('.old_password') %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "col-sm-4 col-xs-12 col-form-label" %>
      <div class="col-sm-7 col-xs-12">
        <%= f.text_field :password, type: :password, :label => false, :class => 'form-control', :placeholder => t('.new_password') %>
        <span class="hint"><%= t('.hint')%></span>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, class: "col-sm-4 col-xs-12 col-form-label" %>
      <div class="col-sm-7 col-xs-12">
        <%= f.text_field :password_confirmation, type: :password, :label => false, :class => 'form-control', :placeholder => t('.confirm_password') %>
      </div>
    </div>

  	<div class="form-group text-center">
      <%= f.submit  t('.change'), :class => 'btn button-primary' %>
    </div>
  <% end %>
</div>
