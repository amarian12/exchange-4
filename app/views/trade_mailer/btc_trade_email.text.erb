<%= t('.order_infomations', amount: @trade.amount, price: @trade.price, time: @trade.created_at) %>
<%= t('.tradecode', tradecode: @trade.tradecode) %>
<%= t('.account', account: @trade.account.member.email) %>
<%= if @trade.exchangerate 
  t('.exchange_rate', exchange_rate: @trade.exchangerate)
end %>
<%= t('.payment', btc_address: TaocoinFundSources.find_by_id(@trade.taocoin_fund_source_id).btc_address) %>
<%= t('.end') %>