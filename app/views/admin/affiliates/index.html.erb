<div class="row admin-id-document">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <span>検索</span>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-lg-12 col-md-12">
          <%= form_tag(admin_affiliates_path, method: 'get', class: 'form-inline') do %>
            <div class="form-group">
              <%= select_tag(:search_field, options_for_select([["ID", 'id'], [" ボーナス", 'bonus']], @search_field), class: 'form-control') %>
            </div>
            <div class="form-group">
              <%= text_field_tag(:search_term, @search_term, class: 'form-control') %>
            </div>
            <%= submit_tag "検索",class: "btn btn-default" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row load-page">
  <div class="panel panel-primary">
    <div class=" panel-heading">
      <span>アフィリエイト</span>
    </div>
    <div class="panel-body">
      <table class="table table-striped table-responsive pretty">
        <thead>
          <tr>
            <th><%= sortable "id", "ID" %></th>
            <th>メンバーID</th>
            <th>氏名</th>
            <th><%= sortable "number_people", "人数" %></th>
            <th><%= sortable "bonus", "ボーナス(JPY)" %></th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody id="list_bonus">
          <%= render partial: 'list_bonus', locals: { history: @history} %>
        </tbody>
      </table>
      <div class="text-center">
        <%= paginate @history if @history %>
      </div>
    </div>
  </div>
</div>
