<%= javascript_include_tag "bank_account" %>

<div class="bank-container">
  <h2 class="page-title"><%= t('.title') %></h1>
  <%= simple_form_for @bank_account, :url => bank_accounts_new_path do |f| %>
    <div class="bank-account-content">
      <div class="col-xs-12 bank-account-row">
        <div class="form-group">
          <div class="form-label ">
            <label class="" for=""><%= t('.bank_name') %></label>
          </div>
          <div class="form-input">
            <%= f.input :bank_name, required: false, label: false%>
          </div>
        </div>
      </div>
      <div class="col-xs-12 bank-account-row">
        <div class="form-group">
          <div class="form-label ">
            <label class="" for=""><%= t('.bank_branch') %></label>
          </div>
          <div class="form-input">
            <%= f.input :bank_branch, required: false, label: false%>
          </div>
        </div>
      </div>
      <div class="col-xs-12 bank-account-row">
        <div class="form-group">
          <div class="form-label ">
            <label class="" for=""><%= t('.account_type') %></label>
          </div>
          <div class="form-input">
            <%= f.input :account_type, label: false, as: :select, prompt: t('actions.select'), required: false %>
          </div>
        </div>
      </div>
      <div class="col-xs-12 bank-account-row">
        <div class="form-group">
          <div class="form-label ">
            <label class="" for=""><%= t('.account_number') %></label>
          </div>
          <div class="form-input">
            <%= f.input :account_number, required: false, label: false%>
          </div>
        </div>
      </div>
      <div class="col-xs-12 bank-account-row">
        <div class="form-group">
          <div class="form-label owner-label">
            <label class="" for=""><%= raw t('.owner1') %></label>
            <label class="" for=""><%= raw t('.owner2') %></label>
          </div>
          <div class="form-input">
            <%= f.input :owner, required: false, label: false, hint: t('.hint').html_safe %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="bank-button text-center">
          <%= f.button :submit, t('.update'), :class => "btn button-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
