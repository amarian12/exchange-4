<%= javascript_include_tag "bank_account" %>
<div class="bank-container">
	<%= simple_form_for @bank_account, :url => edit_bank_accounts_path do |f| %>
		<div class="text-center">
			<h1 class="title-legend"><%= t('.title') %></h1>
		</div>
		<div class="bank-account-content">
			<div class="col-xs-12 bank-account-row">
				<div class="form-group">
					<div class="form-label ">
						<label class="" for=""><%= t('.bank_name') %></label>
					</div>
					<div class="form-input">
						<%= f.input :bank_name, required: false, label: false%>
					</div>
				</div>
			</div>
			<div class="col-xs-12 bank-account-row">
				<div class="form-group">
					<div class="form-label ">
						<label class="" for=""><%= t('.bank_branch') %></label>
					</div>
					<div class="form-input">
						<%= f.input :bank_branch, required: false, label: false%>
					</div>
				</div>
			</div>
			<div class="col-xs-12 bank-account-row">
				<div class="form-group">
					<div class="form-label ">
						<label class="" for=""><%= t('.account_type') %></label>
					</div>
					<div class="form-input">
						<%= f.input :account_type, label: false, as: :select, prompt: t('actions.select'), required: false %>
					</div>
				</div>
			</div>
			<div class="col-xs-12 bank-account-row">
				<div class="form-group">
					<div class="form-label ">
						<label class="" for=""><%= t('.account_number') %></label>
					</div>
					<div class="form-input">
						<%= f.input :account_number, required: true, label: false%>
					</div>
				</div>
			</div>
			<div class="col-xs-12 bank-account-row">
				<div class="form-group">
					<div class="form-label ">
						<label class="" for=""><%= t('.owner').html_safe %></label>
					</div>
					<div class="form-input">
						<%= f.input :owner, required: false, hint: t('.hint').html_safe, label: false %>
					</div>
				</div>
			</div>

			<div class="form-group form-button">
				<div class="form-submit">
					<div class="col-xs-6">
						<%= f.button :submit, t('.update'), :class => "btn button-primary" %>
					</div>
					<div class="col-xs-6">
						<%= link_to t('.cancel'), @back_page, :class => "btn button-cancel"%>
					</div>
				</div>
			</div>
		</div>
	<% end %>
</div>
